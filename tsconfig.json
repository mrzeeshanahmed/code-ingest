{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"lib": ["es2020"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "out", "test"]
}
